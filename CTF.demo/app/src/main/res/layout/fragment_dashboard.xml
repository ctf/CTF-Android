<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292a3d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- row for 1b16 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_1B16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:height="90dp"
                android:gravity="fill_horizontal|center_vertical|center_horizontal"
                android:text="@string/string_1b16"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/vacancies_1B16"
                style="@style/dashboard_icons"
                android:contentDescription="@string/computers_available"
                android:src="@drawable/computers_available_true" />

            <ImageView
                android:id="@+id/printer_1B16_south"
                style="@style/dashboard_icons"
                android:contentDescription="@string/printer_working" />

            <ImageView
                android:id="@+id/printer_1B16_north"
                style="@style/dashboard_icons"
                android:contentDescription="@string/printer_working" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView style="@style/dashboard_subheaders" />

            <TextView style="@style/dashboard_subheaders" />

            <TextView
                style="@style/dashboard_subheaders"
                android:text="@string/south" />

            <TextView
                style="@style/dashboard_subheaders"
                android:text="@string/north" />
        </LinearLayout>

        <!-- row for 1b17 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_1B17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:height="90dp"
                android:gravity="fill_horizontal|center_vertical|center_horizontal"
                android:text="@string/string_1b17"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/vacancies_1B17"
                style="@style/dashboard_icons"
                android:contentDescription="@string/computers_available"
                android:src="@drawable/computers_available_true" />

            <ImageView
                android:id="@+id/printer_1B17_south"
                style="@style/dashboard_icons"
                android:contentDescription="@string/printer_working" />

            <ImageView
                android:id="@+id/printer_1B17_north"
                style="@style/dashboard_icons"
                android:contentDescription="@string/printer_working" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView style="@style/dashboard_subheaders" />

            <TextView style="@style/dashboard_subheaders" />

            <TextView
                style="@style/dashboard_subheaders"
                android:text="@string/south" />

            <TextView
                style="@style/dashboard_subheaders"
                android:text="@string/north" />
        </LinearLayout>

        <!-- row for 1b18 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_1B18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".25"
                android:height="90dp"
                android:gravity="fill_horizontal|center_vertical|center_horizontal"
                android:text="@string/string_1b18"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/vacancies_1B18"
                style="@style/dashboard_icons"
                android:contentDescription="@string/computers_available"
                android:src="@drawable/computers_available_true" />

            <ImageView
                android:id="@+id/printer_1B18"
                style="@style/dashboard_icons"
                android:contentDescription="@string/printer_working" />

            <ImageView
                style="@style/dashboard_icons"
                android:contentDescription="filler" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView style="@style/dashboard_subheaders" />

            <TextView style="@style/dashboard_subheaders" />

            <TextView
                style="@style/dashboard_subheaders"
                android:text="@string/north" />

            <TextView style="@style/dashboard_subheaders" />
        </LinearLayout>

        <!-- status text -->
        <TextView
            android:id="@+id/dashboard_username"
            style="@style/dashboard_text" />

        <TextView
            android:id="@+id/dashboard_quota"
            style="@style/dashboard_text" />

        <TextView
            android:id="@+id/dashboard_last_print_job"
            style="@style/dashboard_text" />

    </LinearLayout>

</ScrollView>