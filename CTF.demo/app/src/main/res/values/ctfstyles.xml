<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="page">
        <item name="android:layout_height">@string/maxheight</item>
        <item name="android:layout_width">@string/maxwidth</item>
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="subheader">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">@string/maxwidth</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="table_header">
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">@string/maxwidth</item>
    <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
    <item name="android:gravity">center_horizontal|center_vertical</item>
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="table">
        <item name="android:layout_width">@string/maxwidth</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
    </style>
</resources>